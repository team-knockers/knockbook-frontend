/* Outer container inside SimplePopup body */
.container {
  display: grid;
  grid-template-rows: 1fr auto;
  width: min(92vw, 560px);
  max-width: 560px;
  background: #ffffff;
  border-radius: 16px;
  overflow: hidden;
}

/* Message section */
.message {
  padding: 24px 20px 16px 20px;
  text-align: center;
}

.title {
  margin: 0;
  font-size: 1.1rem;
  font-weight: 700;
  color: #111827;
}

.desc {
  margin: 8px 0 0 0;
  font-size: 0.95rem;
  color: #6b7280;
}

/* Footer with two buttons */
.footer {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 8px;
  padding: 12px;
  background: #f9fafb;
  border-top: 1px solid #eeeeee;
}

.btnCancel,
.btnConfirm {
  height: 44px;
  border-radius: 10px;
  border: none;
  font-size: 0.95rem;
  font-weight: 700;
  cursor: pointer;
}

/* Left: light gray button */
.btnCancel {
  background: #e5e7eb;
  color: #111827;
}

/* Right: dark primary button */
.btnConfirm {
  background: #1f2937;
  color: #ffffff;
}

/* Mobile full width tweak */
@media (max-width: 768px) {
  .container {
    width: 100vw;
    max-width: 100vw;
    border-radius: 16px; /* SimplePopup.fullScreen keeps outer radius 0; inner card stays rounded */
  }
}
